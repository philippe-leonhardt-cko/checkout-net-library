<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Checkout.ApiClient.Xamarin"
             x:Class="Checkout.ApiClient.Xamarin.MainPage">

    <RelativeLayout
        x:Name="container"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        BackgroundColor="{StaticResource ckoMidnightBlue}">
        <FlexLayout
            Direction="Column"
            AlignContent="SpaceEvenly"
            AlignItems="End"
            JustifyContent="SpaceEvenly"
            Wrap="Wrap">
            <BoxView
                FlexLayout.Basis="25%"/>
            <Label
                Text="Checkout.com"
                FlexLayout.AlignSelf="Center"
                FontSize="26"
                FlexLayout.Basis="10%">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="serif"/>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <FlexLayout
                Direction="Row"
                JustifyContent="SpaceBetween"
                FlexLayout.Basis="10%"
                FlexLayout.AlignSelf="Stretch"
                WidthRequest="300">
                <local:CreditCardEntry
                    x:Name="creditCardNumber"
                    Placeholder="eg. 1234 5678 9012 3456"
                    FlexLayout.Grow="1"
                    FlexLayout.AlignSelf="Center"
                    Keyboard="Numeric">
                    <local:CreditCardEntry.Behaviors>
                        <local:EntryLengtheValidationBehavior MaxLength="16"/>
                    </local:CreditCardEntry.Behaviors>
                </local:CreditCardEntry>
                <BoxView
                    FlexLayout.Grow="0"/>
                <Image
                    x:Name="creditCardIcon"
                    WidthRequest="30"
                    HeightRequest="16"
                    BackgroundColor="{StaticResource ckoStormBlue}"
                    FlexLayout.AlignSelf="Center"/>
            </FlexLayout>
            <FlexLayout
                Direction="Row"
                JustifyContent="SpaceBetween"
                FlexLayout.Basis="10%"
                FlexLayout.AlignSelf="Stretch"
                WidthRequest="300">
                <local:ExpiryDatePicker
                    x:Name="expiryDate"
                    Format="MM/yy"
                    FlexLayout.Grow="0"
                    TextColor="White">
                </local:ExpiryDatePicker>
                <BoxView
                    FlexLayout.Grow="4"/>
                <local:CvvEntry
                    x:Name="cvv"
                    Placeholder="CVV"
                    FlexLayout.Grow="2"
                    Keyboard="Numeric">
                    <local:CvvEntry.Behaviors>
                        <local:EntryLengtheValidationBehavior MaxLength="4"/>
                    </local:CvvEntry.Behaviors>
                </local:CvvEntry>
            </FlexLayout>
            <Button
                x:Name="payNowButton"
                Text="Pay Now"
                BackgroundColor="{StaticResource ckoBrightGreen}"
                FlexLayout.AlignSelf="End"/>
            <BoxView
                FlexLayout.Basis="30%"/>
        </FlexLayout>
        <RelativeLayout
            x:Name="paymentForm"
            
            VerticalOptions="Fill"
            HorizontalOptions="Fill">
        </RelativeLayout>
    </RelativeLayout>

</ContentPage>
